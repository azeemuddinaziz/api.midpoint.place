            "post": {
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "description": "Update location details for a user",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "users"
                ],
